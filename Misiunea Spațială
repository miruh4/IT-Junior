import turtle
import time
import random
import math

# --- CONFIGURARE GENERALÄ‚ ---
wn = turtle.Screen()
wn.bgcolor("black")
wn.title("ðŸš€ Misiunea SpaÈ›ialÄƒ: CÄƒlÄƒtorie spre Infinit")
wn.setup(width=800, height=600)  # FixÄƒm dimensiunea ferestrei

t = turtle.Turtle()
t.speed(0)  # Viteza maximÄƒ
t.width(2)
t.hideturtle()

# Palete de culori pentru diverse etape
culori_foc = ["#FF4500", "#FF8C00", "#FFD700", "#FF6347"]
culori_galaxie = ["#00FFFF", "#FF00FF", "#7B68EE", "#00FA9A", "white"]
culori_matrix = ["#00FF00", "#32CD32", "#98FB98", "#006400"]


# --- FUNCÈšII AJUTÄ‚TOARE (CA SÄ‚ SCRIEM MAI PUÈšIN COD) ---
def scrie_mesaj(text, y_pos=0, marime=18, culoare="white"):
    t.penup()
    t.goto(0, y_pos)
    t.color(culoare)
    t.write(text, align="center", font=("Courier New", marime, "bold"))


def curata_ecran():
    time.sleep(1.5)
    t.clear()


# ==========================================
# PARTEA 1: NUMÄ‚RÄ‚TOAREA INVERSÄ‚ (Lansarea)
# ==========================================
t.penup()
t.goto(0, -50)
t.color("white")

for i in range(3, 0, -1):
    t.write(str(i), align="center", font=("Arial", 60, "bold"))
    time.sleep(1)
    t.clear()

scrie_mesaj("DECOLARE! ðŸš€", 0, 30, "orange")
time.sleep(1)
t.clear()

# ==========================================
# PARTEA 2: PROPULSOARELE (Spirale de foc)
# ==========================================
# Explicatie: Folosim cercuri care se rotesc pentru a simula focul motoarelor
t.goto(0, 0)
t.pendown()

for i in range(80):
    t.color(random.choice(culori_foc))
    t.circle(i * 1.5)
    t.left(10)  # Rotim unghiul puÈ›in cÃ¢te puÈ›in
    t.backward(5)  # Ne miÈ™cÄƒm Ã®n spate pentru efect de tunel

curata_ecran()

# ==========================================
# PARTEA 3: CÃ‚MPUL DE ASTEROIZI (Random)
# ==========================================
# Explicatie: DesenÄƒm forme geometrice neregulate Ã®n locuri aleatorii
scrie_mesaj("ATENÈšIE: CÃ¢mp de Asteroizi!", 250, 14, "red")

for _ in range(30):  # 30 de asteroizi
    t.penup()
    x = random.randint(-350, 350)
    y = random.randint(-250, 200)
    t.goto(x, y)
    t.pendown()
    t.color("gray")
    t.begin_fill()

    # DesenÄƒm o formÄƒ neregulatÄƒ (asteroid)
    laturi = random.randint(5, 9)
    for _ in range(laturi):
        t.forward(random.randint(10, 30))
        t.left(360 / laturi)
    t.end_fill()

curata_ecran()

# ==========================================
# PARTEA 4: HIPERSPAÈšIUL (Tunel Geometric)
# ==========================================
# Explicatie: O buclÄƒ mare care creeazÄƒ un tunel 3D
scrie_mesaj("Activare vitezÄƒ luminÄƒ...", -250, 12)
t.goto(0, 0)
t.pendown()

for i in range(250):
    t.color(culori_galaxie[i % len(culori_galaxie)])
    t.forward(i * 3)
    t.left(121)  # 121 grade creeazÄƒ un model stelat/hexagonal interesant

curata_ecran()

# ==========================================
# PARTEA 5: NEBULOASA COLORATÄ‚ (Spirograf)
# ==========================================
# Explicatie: Cercuri desenate unul peste altul ("Nested Loops")
t.penup()
t.goto(0, 0)
t.pendown()
t.width(1)

for i in range(12):  # Facem 12 "flori" mari
    t.color(random.choice(culori_galaxie))
    for j in range(10):  # Fiecare floare are 10 cercuri
        t.circle(80)
        t.left(36)  # 360 grade / 10 = 36
    t.left(30)  # Ne mutÄƒm pentru urmÄƒtoarea floare

curata_ecran()

# ==========================================
# PARTEA 6: PLANETA EXTRATERESTRÄ‚ (Model Matematica)
# ==========================================
# Explicatie: DesenÄƒm un model complex care seamÄƒnÄƒ cu o planetÄƒ/radar
scrie_mesaj("Scanare planetÄƒ necunoscutÄƒ...", 260, 12, "cyan")
t.goto(0, -150)
t.pendown()
t.width(2)

for i in range(180):
    t.color(culori_galaxie[i % 2])  # AlternÄƒm 2 culori
    t.circle(i)
    t.left(5)  # O schimbare micÄƒ de unghi creeazÄƒ o sferÄƒ

time.sleep(1)
curata_ecran()

# ==========================================
# PARTEA 7: FINAL - MATRICEA (Ploaie digitalÄƒ)
# ==========================================
# Explicatie: Linii verticale care cad
t.width(3)
for _ in range(40):
    x = random.randint(-380, 380)
    y = random.randint(0, 300)
    lungime = random.randint(20, 100)

    t.penup()
    t.goto(x, y)
    t.pendown()
    t.color(random.choice(culori_matrix))
    t.setheading(270)  # ÃŽndreptÄƒm capul Ã®n jos (Sud)
    t.forward(lungime)

# Mesaj Final
t.penup()
t.goto(0, 0)
# DesenÄƒm un chenar pentru text
t.color("white")
t.goto(-200, 50)
t.pendown()
for _ in range(2):
    t.forward(400)
    t.right(90)
    t.forward(100)
    t.right(90)

t.penup()
t.goto(0, -20)
t.color("#00FF00")
t.write("MISIUNE ÃŽNDEPLINITÄ‚", align="center", font=("Verdana", 24, "bold"))
t.goto(0, -120)
t.color("white")
t.write("(Click pe ecran pentru a ieÈ™i)", align="center", font=("Arial", 10, "normal"))

turtle.exitonclick()
