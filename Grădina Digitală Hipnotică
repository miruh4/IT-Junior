import turtle
import time
import random

# --- SetÄƒri iniÈ›iale ---
turtle.bgcolor("black")
turtle.title("ðŸŒº GrÄƒdina DigitalÄƒ HipnoticÄƒ âœ¨")
t = turtle.Turtle()
t.speed(0)
t.width(2)
t.hideturtle()

# PaletÄƒ de culori neon
culori = ["#FF007F", "#00FFFF", "#76FF03", "#FFFF00", "#FF5722", "#D500F9"]

# --- INTRODUCERE ---
t.penup()
t.goto(0, 0)
t.color("white")
t.write("PregÄƒtiÈ›i-vÄƒ pentru...", align="center", font=("Courier", 14, "normal"))
time.sleep(1)
t.goto(0, -30)
t.write("ðŸŒº GRÄ‚DINA DIGITALÄ‚ ðŸŒº", align="center", font=("Arial", 20, "bold"))
time.sleep(2)
t.clear()

# --- EPISODUL 1: FLOAREA MATEMATICÄ‚ (Rozete) ---
# ÃŽnvÄƒÈ›Äƒm despre: Cercuri È™i rotaÈ›ie
t.goto(0, 0)
t.pendown()

for i in range(6):  # DesenÄƒm 6 "petale" mari
    t.color(culori[i % len(culori)])
    for _ in range(30):  # Fiecare petalÄƒ e compusÄƒ din cercuri mici
        t.circle(80)
        t.left(12)  # Rotim puÈ›in cercul
    time.sleep(0.2)

time.sleep(1)
t.clear()

# --- EPISODUL 2: PLOAIA DE LICURICI (Random) ---
# ÃŽnvÄƒÈ›Äƒm despre: Coordonate X È™i Y È™i numere aleatorii
t.width(4)
for i in range(50):
    t.penup()
    # Alegem o poziÈ›ie la Ã®ntÃ¢mplare pe ecran
    x = random.randint(-300, 300)
    y = random.randint(-250, 250)
    t.goto(x, y)
    t.pendown()

    t.color(random.choice(culori))
    marime = random.randint(5, 25)
    t.dot(marime)  # DesenÄƒm un punct (licurici)
    time.sleep(0.05)

time.sleep(1)
t.clear()
t.width(2)

# --- EPISODUL 3: TUNELUL PÄ‚TRAT (Geometrie) ---
# ÃŽnvÄƒÈ›Äƒm despre: CreÈ™terea unei variabile
t.penup()
t.goto(0, 0)
t.pendown()

for i in range(150):
    t.color(culori[i % 6])  # SchimbÄƒm culoarea ciclic
    t.forward(i * 2)  # Latura devine tot mai lungÄƒ
    t.left(91)  # 90 ar fi pÄƒtrat perfect, 91 creeazÄƒ efectul de spiralÄƒ

time.sleep(1)
t.clear()

# --- EPISODUL 4: FOCUL DE ARTIFICII FINAL ---
# ÃŽnvÄƒÈ›Äƒm despre: FuncÈ›ii (concept vizual)
t.penup()
t.goto(0, -100)
t.pendown()

for raza in range(10, 200, 5):
    t.color(random.choice(culori))
    t.pensize(random.randint(1, 3))
    t.circle(raza)
    t.left(45)  # SchimbÄƒm axa
    t.forward(10)
time.sleep(1)
t.clear()

# --- FINAL ---
t.penup()
t.goto(0, 0)
t.color("white")
t.write("AÈ›i programat cu succes! ðŸš€", align="center", font=("Arial", 18, "bold"))
t.hideturtle()

turtle.done()
